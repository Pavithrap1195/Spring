<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean class="com.xworkz.cctv.CCTV" id="cCTV">

		<!-- Way of initializing in Spring-There are 2 types by constructor-arg 
			and property tag -->
<!-- 
		<constructor-arg name="brand" value="MI"></constructor-arg>
		<constructor-arg name="cameraSize" value="12"></constructor-arg>
		<constructor-arg name="price" value="2500.00"></constructor-arg>
		<constructor-arg name="color" value="White"></constructor-arg>

 -->		
		
		<property name="brand" value="Samsung"></property>
		<property name="cameraSize" value="24"></property>
		<property name="price" value="3800.00"></property>
		<property name="color" value="Black"></property>


	</bean>

	<bean class="java.lang.String" id="s">
	<constructor-arg value="AkashPavithra"></constructor-arg>
	</bean>
	
	<bean class="java.lang.Integer" id="i">
	<constructor-arg value="100"></constructor-arg>
	</bean>

	<bean class="java.lang.Double" id="d">
	<constructor-arg value="200.00"></constructor-arg>
	</bean>

	<bean class="java.lang.Float" id="f">
	<constructor-arg value="300.00"></constructor-arg>
	</bean>

	<bean class="java.lang.Short">
	<constructor-arg value="22"></constructor-arg>
	</bean>

	<bean class="java.lang.Byte">
	<constructor-arg value="11"></constructor-arg>
	</bean>
	
	<bean class="java.lang.Boolean">
	<constructor-arg value="true"></constructor-arg>
	</bean>
	
	<bean class="java.lang.Long">
	<constructor-arg value="2211"></constructor-arg>
	</bean>
	



</beans>